<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/linearLineTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin72dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/margin24dp"
                android:layout_height="@dimen/margin24dp"
                android:src="@drawable/fwjd_yuan" />

            <View
                android:layout_width="@dimen/margin1dp"
                android:layout_height="@dimen/margin119dp"
                android:background="@color/theme_color"></View>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin40dp"
            android:layout_marginTop="@dimen/margin51dp"
            android:text="1分钟"
            android:textColor="@color/theme_color"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin17dp"
            android:layout_toRightOf="@+id/linearLineTime"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewStep"
                    style="@style/text_normal"
                    android:text="开始出发"
                    android:textColor="@color/theme_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewDateTime"
                    style="@style/text_normal"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:text="2018-10-10 10:10:10" />
            </LinearLayout>

            <TextView
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/margin7dp"
                android:id="@+id/textViewAddress"
                style="@style/text_normal"
                android:text="textViewAddress" />
            <Button
                android:id="@+id/btnSign"
                android:layout_marginTop="@dimen/margin44dp"
                android:textColor="@color/white"
                android:text="点击"
                android:background="@color/theme_color"
                android:layout_width="@dimen/margin100dp"
                android:layout_height="@dimen/margin28dp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>