<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>
    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin0.5dp"></View>
    <android.support.design.widget.TabLayout
        app:tabIndicatorColor="@color/theme_color"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        android:id="@+id/tableWorkList"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin60dp"></android.support.design.widget.TabLayout>
    <com.qixiu.wigit.hviewpager.HackyViewPager
        android:id="@+id/viewpagerWorklist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.qixiu.wigit.hviewpager.HackyViewPager>

</LinearLayout>