<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/mine_text_grey"
        android:text="联系人及地址" />

    <com.qixiu.widget.LineControllerView
        android:id="@+id/textViewServiceObject"
        style="@style/line_under"
        android:background="@drawable/under_line"
        app:textPrimary="服务对象"
        app:textSecondary="-"></com.qixiu.widget.LineControllerView>

    <com.qixiu.widget.LineControllerView
        android:id="@+id/textViewDepartName"
        style="@style/line_under"
        android:background="@drawable/under_line"
        app:textPrimary="单位名称"
        app:textSecondary="-"></com.qixiu.widget.LineControllerView>

    <com.qixiu.widget.LineControllerView
        android:id="@+id/textViewCity"
        style="@style/line_under"
        android:background="@drawable/under_line"
        app:textPrimary="地区"
        app:textSecondary="-"></com.qixiu.widget.LineControllerView>

    <com.qixiu.widget.LineControllerView
        android:id="@+id/textViewAddress"
        style="@style/line_under"
        android:background="@drawable/under_line"
        app:textPrimary="地址"
        app:textSecondary="-"></com.qixiu.widget.LineControllerView>

    <com.qixiu.widget.LineControllerView
        android:id="@+id/textViewContactPerson"
        style="@style/line_under"
        android:background="@drawable/under_line"
        app:textPrimary="联系人"
        app:textSecondary="-"></com.qixiu.widget.LineControllerView>

    <com.qixiu.widget.LineControllerView
        android:id="@+id/textViewContactPhone"
        style="@style/line_controller_style"
        android:background="@drawable/under_line"
        app:textPrimary="电话"
        app:textSecondary="-"></com.qixiu.widget.LineControllerView>

    <TextView
        style="@style/mine_text_grey"
        android:text="服务信息" />

    <com.qixiu.widget.LineControllerView
        android:id="@+id/textViewExpectTime"
        style="@style/line_under"
        android:layout_height="wrap_content"
        android:background="@drawable/under_line"
        app:textPrimary="期望上门时间"
        app:textSecondary="-"></com.qixiu.widget.LineControllerView>

    <com.qixiu.widget.LineControllerView
        android:id="@+id/textViewHandelPerson"
        style="@style/line_under"
        app:textPrimary="负责人"
        app:textSecondary="-"></com.qixiu.widget.LineControllerView>

    <LinearLayout
        android:id="@+id/linearProblem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/mine_text_grey"
            android:text="问题信息" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/mine_text_grey"
                    android:background="@color/white"
                    android:text="问题描述" />

                <TextView
                    android:id="@+id/textViewPrblems"
                    style="@style/text_normal"
                    android:paddingLeft="@dimen/margin20dp"
                    android:text="" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin0.5dp"
                    android:layout_marginLeft="@dimen/margin18dp"
                    android:layout_marginRight="@dimen/margin18dp"
                    android:background="@color/lineColor"></View>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewGotoProblem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin20dp"
                android:src="@drawable/smbd_butn_xiala" />

        </RelativeLayout>

        <TextView
            style="@style/mine_text_grey"
            android:background="@color/white"
            android:text="图片" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewPic"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin100dp"
            android:layout_marginLeft="@dimen/margin18dp"
            android:background="@color/white"></android.support.v7.widget.RecyclerView>

        <TextView
            style="@style/mine_text_grey"
            android:background="@color/white"
            android:text="语音" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewSound"
                android:layout_width="@dimen/margin36dp"
                android:layout_height="@dimen/margin36dp"
                android:layout_marginLeft="@dimen/margin20dp"
                android:layout_marginTop="@dimen/margin10dp"
                android:layout_marginBottom="@dimen/margin20dp"
                android:focusableInTouchMode="true"
                android:src="@drawable/createaworkorder_icon_voice" />

            <ImageView
                android:id="@+id/iamgeView_play_voice"
                android:layout_width="@dimen/margin30dp"
                android:layout_height="@dimen/margin30dp"
                android:background="@drawable/red_port"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/mine_text_grey"
        android:text="单据信息" />

    <com.qixiu.widget.LineControllerView
        android:id="@+id/textViewTicketNumber"
        style="@style/line_under"
        android:background="@drawable/under_line"
        app:textPrimary="单据号"
        app:textSecondary="-"></com.qixiu.widget.LineControllerView>

    <com.qixiu.widget.LineControllerView
        android:id="@+id/textViewCommitTime"
        style="@style/line_controller_style"
        app:textPrimary="提交时间"
        app:textSecondary="-"></com.qixiu.widget.LineControllerView>

    <LinearLayout
        android:id="@+id/lineearLayoutSignOrFinish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin66dp"
        android:layout_marginTop="@dimen/margin17dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin7dp"
        android:paddingTop="@dimen/margin4dp"
        android:paddingRight="@dimen/margin7dp">

        <TextView
            style="@style/mine_text_grey"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@color/theme_color"
            android:drawableLeft="@drawable/qkxx_icon_fwwc"
            android:drawablePadding="@dimen/margin4dp"
            android:gravity="center"
            android:onClick="completeWork"
            android:text="服务完成"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewGotoSign"
            style="@style/mine_text_grey"
            android:layout_width="0px"
            android:layout_marginLeft="@dimen/margin7dp"
            android:layout_weight="1"
            android:background="@color/orange_btn"
            android:drawableLeft="@drawable/qkxx_icon_qd"
            android:drawablePadding="@dimen/margin4dp"
            android:gravity="center"
            android:onClick="signWork"
            android:text="签到"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>