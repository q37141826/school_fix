<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.qixiu.schoolfix.ui.acitivty.work_flow.problem.ProblemSelectActivity">

    <RelativeLayout
        android:id="@+id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/linearlayoutOtherProblem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.qixiu.widget.LineControllerView
                app:showRightArrow="true"
                android:id="@+id/lineOther"
                app:textPrimary="其它"
                style="@style/line_controller_style"></com.qixiu.widget.LineControllerView>
            <EditText
                android:id="@+id/edittextOtherProblem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin147dp"
                android:layout_marginLeft="@dimen/margin25dp"
                android:layout_marginRight="@dimen/margin40dp"
                android:background="@drawable/shape_editeext_back_grey" />
        </LinearLayout>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
