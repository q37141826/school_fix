<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingLeft="@dimen/margin15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin44dp">

        <TextView
            android:textSize="16sp"
            android:textColor="#FF323232"
            android:id="@+id/textViewTilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/switchButton"
            android:layout_width="@dimen/margin41dp"
            android:layout_height="@dimen/margin20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
          />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin1dp"
        android:background="#FFE8E8E8"></View>

    <LinearLayout
        android:paddingLeft="@dimen/margin15dp"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewResovleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理措施："
            android:textColor="#FF323232"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edttextResolve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/album_Transparent"
            android:hint="请输入处理措施"
            android:textColor="#FF323232"
            android:textSize="14sp" />


    </LinearLayout>
</LinearLayout>