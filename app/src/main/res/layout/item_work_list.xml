<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/margin20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="@dimen/margin67dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewWorkListItem"
                android:layout_width="@dimen/margin67dp"
                android:layout_height="@dimen/margin67dp" />

            <TextView
                android:id="@+id/textViewObjectName"
                style="@style/text_normal"
                android:text="设备名称"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin19dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/textViewAddress"
                    style="@style/text_black"
                    android:ellipsize="end"
                    android:maxLength="7"
                    android:maxLines="1"
                    android:text="维修地址最多7个字" />

                <TextView
                    android:id="@+id/textViewState"
                    style="@style/text_theme"
                    android:layout_alignParentRight="true"
                    android:text="状态" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textViewCity"
                style="@style/text_normal"
                android:text="市区"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginRight="@dimen/margin80dp"
                    android:id="@+id/textViewProblem"
                    style="@style/text_normal"
                    android:text="什么原因" />

                <TextView
                    android:id="@+id/textViewType"
                    style="@style/text_normal"
                    android:layout_alignParentRight="true"
                    android:text="设施类型"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textViewTime"
                android:gravity="right"
                android:layout_width="match_parent"
                style="@style/text_normal"
                android:text="时间" />
        </LinearLayout>
    </LinearLayout>

        <View
            android:background="@color/back_grey"
            android:layout_width="match_parent"
            android:layout_height="10dp"></View>
</LinearLayout>