<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--tablayout的字体皮肤-->
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="line_style_app">
        <item name="android:background">@color/lineColor</item>
        <item name="android:layout_height">@dimen/margin0.5dp</item>
        <item name="android:layout_width">match_parent</item>

    </style>


</resources>
